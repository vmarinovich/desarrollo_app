<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.HomeFragment">

   <androidx.core.widget.NestedScrollView

       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           tools:ignore="ExtraText">

           <androidx.cardview.widget.CardView
               android:id="@+id/cardView1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius "@dimen/cardCornerRadius"
               app:cardElevation="4dp"
               android:layout_margin="@dimen/marginhomesub">

               <androidx.appcompat.widget.LinearLayoutCompat
                   android:id="@+id/linearlo"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="15dp"
                   android:orientation="vertical">

                   <ImageView
                       android:id="@+id/imgCard1"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/altoImagen"
                       android:contentDescription="@string/todo"
                       android:src="@drawable/banner_platzi_conf" />


                   <view
                       android:id="@+id/bar11"
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:background="#000" />

                   <TextView
                       android:id="@+id/textView11"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="@dimen/marginhomesub"
                       android:layout_marginTop="@dimen/marginhomesub"
                       android:layout_marginRight="@dimen/marginhomesub"
                       android:text="@string/inicio_frag_tv_info"
                       android:textColor="@color/colorPrimaryDark"
                       android:textSize="@dimen/TamañoTitulo"
                       android:textStyle="bold" />

                   <view
                       android:id="@+id/bar12"
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:layout_marginTop="@dimen/marginhomesub"
                       android:background="#000" />

                   <TextView
                       android:id="@+id/textView12"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="@dimen/marginhomesub"
                       android:layout_marginTop="@dimen/marginhomesub"
                       android:layout_marginRight="@dimen/marginhomesub"
                       android:text="@string/inicio_frag_tv_que_es_resp"
                       android:textColor="@color/colorPrimary"
                       android:textSize="@dimen/TamañoTexto" />


               </androidx.appcompat.widget.LinearLayoutCompat>
           </androidx.cardview.widget.CardView>


           <androidx.cardview.widget.CardView
               android:id="@+id/cardView2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="@dimen/cardCornerRadius"
               app:cardElevation="4dp"
               android:layout_margin="@dimen/marginhomesub">

               <androidx.appcompat.widget.LinearLayoutCompat
                   android:id="@+id/linearlo2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="15dp"
                   android:elevation="4dp"
                   android:orientation="vertical">

                   <ImageView
                       android:id="@+id/imgCard2"
                       android:layout_width="wrap_content"
                       android:layout_height="@dimen/altoImagen"
                       android:contentDescription="@string/todo"
                       android:src="@drawable/platzi_conf_2"
                       android:scaleType="centerCrop"/>


                   <view
                       android:id="@+id/bar21"
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:background="#000" />

                   <TextView
                       android:id="@+id/textView21"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="@dimen/marginhomesub"
                       android:layout_marginTop="@dimen/marginhomesub"
                       android:layout_marginRight="@dimen/marginhomesub"
                       android:text="@string/inicio_frag_tv_por_que"
                       android:textColor="@color/colorPrimaryDark"
                       android:textSize="@dimen/TamañoTitulo"
                       android:textStyle="bold" />

                   <view
                       android:id="@+id/bar22"
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:layout_marginTop="@dimen/marginhomesub"
                       android:background="#000" />

                   <TextView
                       android:id="@+id/textView22"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="@dimen/marginhomesub"
                       android:layout_marginTop="@dimen/marginhomesub"
                       android:layout_marginRight="@dimen/marginhomesub"
                       android:text="@string/inicio_frag_tv_por_que_resp"
                       android:textColor="@color/colorPrimary"
                       android:textSize="@dimen/TamañoTexto" />


               </androidx.appcompat.widget.LinearLayoutCompat>
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/cardView3"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:cardElevation="5dp"
               app:cardCornerRadius="@dimen/cardCornerRadius"
               tools:ignore="ExtraText"
               android:layout_margin="@dimen/marginhomesub">

               <androidx.appcompat.widget.LinearLayoutCompat
                   android:id="@+id/linearlo3"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <ImageView
                       android:id="@+id/imgCard3"
                       android:layout_width="wrap_content"
                       android:layout_height="@dimen/altoImagen"
                       android:contentDescription="@string/todo"
                       android:src="@drawable/platzi_conf_3"
                       android:scaleType="centerCrop"/>


                   <view
                       android:id="@+id/bar31"
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:background="#000" />

                   <TextView
                       android:id="@+id/textView31"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="@dimen/marginhomesub"
                       android:layout_marginTop="@dimen/marginhomesub"
                       android:layout_marginRight="@dimen/marginhomesub"
                       android:text="@string/inicio_frag_tv_info"
                       android:textColor="@color/colorPrimaryDark"
                       android:textSize="@dimen/TamañoTitulo"
                       android:textStyle="bold" />

                   <view
                       android:id="@+id/bar32"
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:layout_marginTop="@dimen/marginhomesub"
                       android:background="#000" />

                   <TextView
                       android:id="@+id/textView32"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="@dimen/marginhomesub"
                       android:layout_marginTop="@dimen/marginhomesub"
                       android:layout_marginRight="@dimen/marginhomesub"
                       android:text="@string/inicio_frag_tv_info_resp"
                       android:textColor="@color/colorPrimary"
                       android:textSize="@dimen/TamañoTexto" />


               </androidx.appcompat.widget.LinearLayoutCompat>
           </androidx.cardview.widget.CardView>
       </LinearLayout>
   </androidx.core.widget.NestedScrollView>
</FrameLayout>