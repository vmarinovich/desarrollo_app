<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="#fff">

        <Toolbar android:layout_width="wrap_content">
            android:id="@+id/toolBarSpeaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        </Toolbar>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchorGravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/icFragmentSpeaker1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/altoImagen"
                    android:paddingTop="10dp"
                    android:src="@drawable/ic_launcher_background" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="7dp"
                app:cardCornerRadius="@dimen/cardCornerRadius"
                android:layout_margin="@dimen/marginhomesub">

                <LinearLayout
                    android:id="@+id/linearlo122"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSpeakerFragment1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre de Expositor"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_horizontal"
                        android:textSize="@dimen/TamañoTitulo"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSpeakerFragment2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Profesión"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/TamañoTexto" />
                    <TextView
                        android:id="@+id/tvSpeakerFragment3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trabajo Actual"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_horizontal"
                        android:textSize="@25"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivTwitter"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_icons_twitter"/>
                    <TextView
                        android:id="@+id/tvSpeakerFragment4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Descripción y experiencia del expositor"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_margin="15dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/TamañoTexto" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>
</FrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>